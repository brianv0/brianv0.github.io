<!doctype html>

<head>
  {% block starthead %}{% endblock starthead %}
  <meta charset="{{ resource.meta.charset }}">

  <title>{% block title %}{{ resource.meta.title }}{% endblock %}</title>
  <meta name="description" content="{{ resource.meta.description }}">
  <meta name="author" content="{{ resource.meta.author }}">

  <!--  Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="{{ resource.meta.viewport }}">

  {% block favicons %}
  <!-- Place favicon.ico & apple-touch-icon.png
        in the root of your domain and delete these references 
  <link rel="shortcut icon" href="">
  <link rel="apple-touch-icon" href="">
   -->
  {% endblock favicons %}

  {% block css %}
  <link rel="stylesheet" href="{{ media_url('css/tnkr.css') }}">
  <link rel="stylesheet" href="{{ media_url('css/grid.css') }}">
  <link rel="stylesheet" href="{{ media_url('css/syntax.css') }}">
  {% endblock css %}

  {% block headjs %}
    <script src="{{ media_url('js/libs/modernizr-1.7.min.js') }}"></script>
  {% endblock headjs %}

  {% block endhead %}{% endblock endhead %}
</head>
<body id="{{ resource.meta.id if resource.meta.id else resource.slug }}">

  {% block nav %}
   <div class="navbar">
    <div class="container_8">
     <div class="grid_1">
       <a class="brand" href="#">tnkr</a>
     </div>
     <div class="grid_6">
      <ul class="navlist">
        <li><a id="blog" href="/blog">Blog</a></li>
        <li><a href="about.html">About</a></li>
      </ul>
     </div>
    </div>
   </div>
  {% endblock nav %}
  <div class="clear"></div>
  {% block content %}

      <div class="container_8">
        <div class="grid_1">
          <div class="content-meta">
           {% if resource.meta.blogdate %}
             <time datetime="{{ resource.meta.created.strftime('%Y-%m-%d') }}" class="post-time">
               {{ resource.meta.created.strftime('%a, %d %b %Y') }}
             </time>
           {% endif %}
          </div>
        </div>

      <div class="grid_6">
        {% block container %}
          <section class="content">
          {% block main %}
          {% endblock main %}
          </section>
        {% endblock container %}
      </div>
    </div>

  <div class="clear"></div>


  {% endblock content%}

  {% block js %}
  {% block jquery %}
  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  {% endblock jquery %}

  {% block scripts %}
  {% endblock scripts %}


  {% block analytics %}
  {% include "analytics.j2" %}
  {% endblock analytics %}

  {% endblock js %}

</body>
</html>
